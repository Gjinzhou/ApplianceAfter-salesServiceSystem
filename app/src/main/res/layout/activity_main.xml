<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="5"
        android:orientation="vertical"
        android:background="@mipmap/bg"
        tools:context=".activity.MainActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:inputType="phone"
                android:textSize="14sp"
                android:ems="10"
                android:layout_centerInParent="true"
                android:hint="请输入用户手机号"
                android:background="@drawable/rounded_rectangle_white_lucency"
                android:id="@+id/phone"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:textSize="14sp"
                android:layout_centerInParent="true"
                android:hint="请输入用户密码"
                android:background="@drawable/rounded_rectangle_white_lucency"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/pwd"/>

    </RelativeLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:weightSum="2">
            <Button
                    android:text="注册"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:onClick="doClick"
                    android:backgroundTint="@color/colorAccent"
                    android:background="@drawable/rounded_rectangle_accent"
                    android:id="@+id/register"/>
            <Button
                    android:text="登录"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:onClick="doClick"
                    android:layout_margin="10dp"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/rounded_rectangle_primary_dark"
                    android:id="@+id/login"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        <TextView
                android:id="@+id/toMaintarner"
                android:layout_width="wrap_content"
                android:padding="3dp"
                android:onClick="doClick"
                android:layout_centerInParent="true"
                android:text="我是维修工"
                android:textColor="@color/colorPrimaryDark"
                android:textAlignment="center"
                android:layout_height="wrap_content">
        </TextView>
    </RelativeLayout>


</LinearLayout>